{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "noEmit": false, // Emit handled by webpack.
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.test.ts"]
}
